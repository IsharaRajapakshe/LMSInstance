<% presenter = Questions::ShowPresenter.new(self, @question) %>

<% content_for(:head) do %>
  <title><%= presenter.page_title %></title>
  <%= stylesheet_pack_tag 'QuestionsShowPack', media: 'all' %>
<% end %>

<% content_for(:tail) do %>
  <%= javascript_pack_tag 'QuestionsShowPack', nonce: true %>
<% end %>

<div class="w-full" id="react-root" data-json-props="<%= presenter.props_to_json %>"></div>
